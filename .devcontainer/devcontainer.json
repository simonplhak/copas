{
  "name": "copas",
  "image": "ubuntu:22.04",
  "extensions": [
    "ms-python.python"
  ],
  "settings": {
    "pythonPath": "/usr/bin/python3.10"
  },
  "workspaceFolder": "/copas-docker",
  "forwardPorts": [8006, 8007, 8008, 8009, 8010, 8080],
  "runArgs": ["--network=copas"],
  "containerEnv": {
    "HTTP_PORT": "8006",
    "MASTER_HTTP_PORT": "8006",
    "CTFD_HOST": "http://localhost:8007",
    "CTFD_PORT": "8007",
    "ROLE": "master",
  },
  "postCreateCommand": "cd .devcontainer && ./post_create.sh",
}
