{
  "name": "copas",
  "image": "ubuntu:22.04",
  "extensions": [
    "ms-python.python"
  ],
  "settings": {
    "pythonPath": "/usr/bin/python3.10"
  },
  "workspaceFolder": "/copas-docker",
  "remoteUser": "vscode",
  "forwardPorts": [8006, 8007, 3306, 8009, 8010, 8080],
  "runArgs": ["--network=copas"],
  "containerEnv": {
    "HTTP_PORT": "8006",
    "HTTP_MASTER_PORT": "8006",
    "MYSQL_USER": "ctfd",
    "MYSQL_PASSWORD": "ctfd",
    "MYSQL_DATABASE": "ctfd",
    "PRODUCTION": "true",
    "DATABASE_URL": "mysql+pymysql://ctfd:ctfd@localhost:3306/ctfd",
    "CTFD_HOST": "http://localhost:8007",
    "ROLE": "master",
    "CTFD_CONFIG": "/copas-docker/game_utils/ctfd/ctfd_blank_backup.zip",
    "CTFD_ADMIN_TOKEN": "ctfd_9cc6c4906617986493209fcb6cbe3b82f247a6776b4dda3f114d11dc7aba7c81"
  },
  "postCreateCommand": "cd .devcontainer && ./post_create.sh",
}
